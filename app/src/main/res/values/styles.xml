<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BiclooTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="BiclooSmallTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="BiclooButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OutlinedBiclooButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="elevation">0dp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="TopSearchBar" />

    <style name="TopSearchBar.Filter" />

    <style name="TopSearchBar.Filter.MainChip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="chipBackgroundColor">@color/primary</item>
        <item name="chipCornerRadius">@dimen/radius_large</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="chipIcon">@drawable/ic_filter</item>
    </style>

    <style name="TopSearchBar.Filter.Chip" parent="ShapeAppearanceOverlay.Material3.Chip">
        <item name="android:fontFamily">@font/inter_font_family</item>
        <item name="android:textAllCaps">true</item>
        <item name="chipBackgroundColor">@color/lightBackground</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="chipCornerRadius">@dimen/radius_large</item>
        <item name="chipStrokeColor">@color/lightBackground</item>
        <item name="android:textColor">@color/onLightBackground</item>
        <item name="chipIcon">@drawable/ic_close</item>
    </style>

    <style name="LocationButton" parent="BiclooButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="iconSize">@dimen/icon_small</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="iconGravity">textEnd</item>
        <item name="icon">@drawable/circle_primary</item>
        <item name="iconTint">@color/primary</item>
    </style>

    <style name="FavoriteButton" parent="BiclooButton">
        <item name="iconSize">@dimen/icon_small</item>
        <item name="iconGravity">start</item>
        <item name="icon">@drawable/circle_primary</item>
        <item name="iconTint">@color/neutral_light_lightest</item>
    </style>
</resources>